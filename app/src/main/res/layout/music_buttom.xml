<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/local_music_bottomLayout"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_alignParentBottom="true"
    android:background="#33EEEEEE">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#9933FA" />

    <ImageView
        android:id="@+id/local_music_bottom_ivIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:background="@mipmap/a1"
        android:src="@mipmap/icon_song"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/local_music_bottom_tvSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/local_music_bottom_ivIcon"
        android:text=""
        android:textSize="16dp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="1" />

    <TextView
        android:id="@+id/local_music_bottom_tvSinger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/local_music_bottom_tvSong"
        android:layout_alignLeft="@id/local_music_bottom_tvSong"
        android:layout_marginTop="10dp"
        android:text=""
        android:textSize="12sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxLength="12"/>

    <ImageView
        android:id="@+id/local_music_bottom_ivNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/icon_next" />

    <ImageView
        android:id="@+id/local_music_bottom_ivPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@id/local_music_bottom_ivNext"
        android:src="@mipmap/icon_play" />

    <ImageView
        android:id="@+id/local_music_bottom_ivLast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@id/local_music_bottom_ivPlay"
        android:src="@mipmap/icon_last" />

</RelativeLayout>